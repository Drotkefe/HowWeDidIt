<Window x:Class="HowWeDidIt.SaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HowWeDidIt"
        mc:Ignorable="d"
        Title="Save your score to the leaderboard" Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="Add your name here:" HorizontalAlignment="Left" FontSize="20"/>
        <TextBox x:Name="Player_Name" Grid.Row="0" Margin="40" FontSize="50" />
        <Button Content="Save result" Grid.Row="1" Width="150" HorizontalAlignment="Left" Margin="20 10 0 10" Click="Save_Click"/>
        <Button Content="Exit without save" Grid.Row="1" Width="150" HorizontalAlignment="Right" Margin="0 10 20 10" Click="Exit_Click"/>
    </Grid>
</Window>
