<Window x:Class="HowWeDidIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:HowWeDidIt"
        mc:Ignorable="d"
        Title="HowWeDidIt" Height="450" Width="800" Loaded="Window_Loaded" Icon="Images/StandR.png" ResizeMode="CanMinimize">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Image gif:ImageBehavior.AnimatedSource="Images/GIF/menu.gif"
                   gif:ImageBehavior.AutoStart="True"
                   gif:ImageBehavior.RepeatBehavior="1"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Background>
        <Image gif:ImageBehavior.AnimatedSource="Images/GIF/running.gif" Width="101" HorizontalAlignment="Left" Margin="702,64,0,54" Grid.Row="2" Stretch="Uniform" RenderTransformOrigin="0.455,0.785" Grid.RowSpan="2"/>
        <Image gif:ImageBehavior.AnimatedSource="Images/GIF/fire.gif" Margin="73,68,646,40" Grid.RowSpan="2" Grid.Row="2" RenderTransformOrigin="0.395,0.532"/>



        <Button x:Name="new_game_button" Style="{DynamicResource RoundedButton}" Grid.Row="0" Margin="170,20,0,20" Content="New Game" FontSize="35" Click="New_Game_Click" Background="Yellow" FontFamily="Arial" HorizontalAlignment="Left" Width="460"/>
        <Button x:Name="load_game_button" Style="{DynamicResource RoundedButton}" Grid.Row="1" Margin="170 20 0 20" Content="Load Game" FontSize="35" Click="Load_Game_Click" Background="Yellow" FontFamily="Arial" HorizontalAlignment="Left" Visibility="Visible" Width="460"/>
        <Button x:Name="leaderboard_button" Style="{DynamicResource RoundedButton}" Grid.Row="2" Margin="170 20 0 20" Content="Leaderboard" FontSize="35" Click="leaderboard_button_Click" Background="Yellow" FontFamily="Arial"  HorizontalAlignment="Left" Width="460"/>
        <Button x:Name="exit_button" Style="{DynamicResource RoundedButton}" Grid.Row="3" Margin="170 20 0 20" Content="Exit" FontSize="35" Click="exit_button_Click" Background="Yellow" FontFamily="Arial"  HorizontalAlignment="Left" Width="460"/>

       


    </Grid>


</Window>
